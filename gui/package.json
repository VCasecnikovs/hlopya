{
  "name": "hlopya",
  "version": "1.0.0",
  "description": "macOS app that records meetings, transcribes with AI, and generates structured notes",
  "author": "VCasecnikovs",
  "license": "UNLICENSED",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --mac --dir",
    "dist": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.hlopya.app",
    "productName": "Hlopya",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dir",
      "icon": "build/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "extraResources": [
      {
        "from": "../audiocap/AudioCap.app",
        "to": "audiocap/AudioCap.app"
      },
      {
        "from": "../app.py",
        "to": "python/app.py"
      },
      {
        "from": "../recorder.py",
        "to": "python/recorder.py"
      },
      {
        "from": "../transcriber.py",
        "to": "python/transcriber.py"
      },
      {
        "from": "../noter.py",
        "to": "python/noter.py"
      },
      {
        "from": "../config.yaml",
        "to": "python/config.yaml"
      },
      {
        "from": "../export.py",
        "to": "python/export.py"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "nub.html"
    ]
  }
}
